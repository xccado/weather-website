<%- include('partials/header') %>

<div class="container mt-5">
    <h1 class="text-center mb-4">天气查询系统</h1>
    
    <div class="search-box mb-4">
        <input type="text" id="locationInput" class="form-control" placeholder="输入城市或地址">
        <div id="suggestions" class="suggestions-list"></div>
    </div>

    <div id="weatherData" class="weather-card">
        <!-- 实时天气 -->
        <div class="realtime-weather">
            <h3>当前天气</h3>
            <div id="realtimeInfo"></div>
        </div>

        <!-- 温度图表 -->
        <canvas id="temperatureChart"></canvas>

        <!-- 天气预报 -->
        <div class="forecast">
            <h3>未来7天预报</h3>
            <div id="dailyForecast"></div>
        </div>

        <!-- 天气预警 -->
        <div class="alerts">
            <h3>气象预警</h3>
            <div id="weatherAlerts"></div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>